{
  "name": "My extension",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "*://nymag.com/*",
        "*://www.thecut.com/*",
        "*://www.vulture.com/*",
        "*://www.grubstreet.com/*",
        "*://localhost.thecut.com/*",
        "*://localhost.dev.nymag.biz/*",
        "*://localhost.grubstreet.com/*",
        "*://localhost.vulture.com/*"
      ],
      "css": ["highlight.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "name": "Click to highlight"
  },
  "permissions": [
    "*://nymag.com/*",
    "*://www.thecut.com/*",
    "*://www.vulture.com/*",
    "*://www.grubstreet.com/*",
    "*://localhost.thecut.com/*",
    "*://localhost.dev.nymag.biz/*",
    "*://localhost.grubstreet.com/*",
    "*://localhost.vulture.com/*"
  ]
}
